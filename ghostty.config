# Ghostty Configuration
# Reload with: cmd+shift+,

# Theme
theme = light:Gruvbox Light Hard,dark:Gruvbox Dark Hard

# Font
font-family = "TX-02"
font-size = 14

# Cursor
mouse-hide-while-typing = true
cursor-style-blink = false
cursor-style = block
adjust-cursor-thickness = 300%

# Window
confirm-close-surface = false
window-theme = system
resize-overlay = never
window-save-state = always
window-inherit-working-directory = true

# Shell: Use Fish by default
shell-integration = fish
command = /opt/homebrew/bin/fish

# macOS Option key behavior
# Left Option: Sends Alt codes (for shortcuts like alt+p)
# Right Option: Types special characters (ñ, é, etc.)
macos-option-as-alt = left

# ⚠️ IMPORTANT: cmd+h System Remap Required ⚠️
# To use cmd+h for tmux navigation, remap at system level:
# 1. System Settings > Keyboard > Keyboard Shortcuts > App Shortcuts
# 2. Click "+" to add new shortcut
# 3. Application: Ghostty.app
# 4. Menu Title: "Hide Ghostty"
# 5. Keyboard Shortcut: F9
# After this, cmd+h works for tmux, F9 hides Ghostty

# Tmux Integration Keybindings
# NOTE: These only work inside a tmux session!
# Prefix C-f is \x06 in hex

# Window management
keybind = cmd+t=text:\x06c
keybind = cmd+w=text:\x06x
keybind = cmd+shift+left_bracket=text:\x06p
keybind = cmd+shift+right_bracket=text:\x06n

# Pane management
keybind = cmd+d=text:\x06v
keybind = cmd+shift+d=text:\x06s

# Pane navigation
keybind = cmd+h=text:\x06h
keybind = cmd+j=text:\x06j
keybind = cmd+k=text:\x06k
keybind = cmd+l=text:\x06l

# Window selection
keybind = cmd+one=text:\x061
keybind = cmd+two=text:\x062
keybind = cmd+three=text:\x063
keybind = cmd+four=text:\x064
keybind = cmd+five=text:\x065
keybind = cmd+six=text:\x066
keybind = cmd+seven=text:\x067
keybind = cmd+eight=text:\x068
keybind = cmd+nine=text:\x069

# Zoom and copy mode
keybind = cmd+shift+enter=text:\x06z
keybind = cmd+shift+c=text:\x06[

